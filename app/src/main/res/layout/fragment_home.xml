<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <Button
        android:id="@+id/receive_button"
        android:layout_width="156dp"
        android:layout_height="180dp"
        android:drawableBottom="@drawable/ic_receive_white_64dp"

        android:padding="20dp"
        android:paddingBottom="20dp"
        android:text="Receive"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/send_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/send_button"
        app:layout_constraintTop_toBottomOf="@+id/send_button" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="156dp"
        android:layout_height="180dp"
        android:drawableTop="@drawable/ic_send_white_64dp"
        android:padding="20dp"
        android:paddingTop="20dp"
        android:text="Send"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/receive_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />
</androidx.constraintlayout.widget.ConstraintLayout>