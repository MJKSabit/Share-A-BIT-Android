<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/unit_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/receiver_avatar_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="#545454"
        app:layout_constraintEnd_toEndOf="@+id/receiver_name_unit"
        app:layout_constraintStart_toStartOf="@+id/receiver_name_unit"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_user_black" />

    <TextView
        android:id="@+id/receiver_name_unit"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:width="64dp"
        android:text="Asus"
        android:textAlignment="center"
        android:textColor="#545454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/receiver_avatar_unit" />
</androidx.constraintlayout.widget.ConstraintLayout>